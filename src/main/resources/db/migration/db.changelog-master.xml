<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1617219483236-1" author="jw (generated)">
        <createTable tableName="article">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_ARTICLE"/>
            </column>
            <column name="title" type="VARCHAR(255)"/>
            <column name="headline" type="VARCHAR(255)"/>
            <column name="content" type="VARCHAR(255)"/>
            <column name="author_id" type="BIGINT"/>
            <column name="added_at" type="datetime2"/>
        </createTable>
    </changeSet>
    <changeSet id="1617219483236-2" author="jw (generated)">
        <createTable tableName="author">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_AUTHOR"/>
            </column>
            <column name="login" type="VARCHAR(255)"/>
            <column name="firstname" type="VARCHAR(255)"/>
            <column name="lastname" type="VARCHAR(255)"/>
            <column name="description" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="1617219483236-4" author="jw (generated)">
        <createTable tableName="comment">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_COMMENT"/>
            </column>
            <column name="content" type="VARCHAR(255)"/>
            <column name="author_id" type="BIGINT"/>
            <column name="added_at" type="datetime2"/>
        </createTable>
    </changeSet>
    <changeSet id="1617219483236-3" author="jw (generated)">
        <createView viewName="author_view">
            select a.id, a.login, max(c.added_at) as lastmod
            from author a
            join comment c on a.id = c.author_id
            group by a.id, a.login
        </createView>
    </changeSet>
    <changeSet id="1617219483236-5" author="jw (generated)">
        <addUniqueConstraint columnNames="login" constraintName="UC_AUTHOR_LOGIN" tableName="author"/>
    </changeSet>
    <changeSet id="1617219483236-8" author="jw (generated)">
        <addForeignKeyConstraint baseColumnNames="author_id" baseTableName="article"
                                 constraintName="FK_ARTICLE_ON_AUTHOR" referencedColumnNames="id"
                                 referencedTableName="author"/>

        <createIndex indexName="IDX_ARTICLE_ON_AUTHOR" tableName="article">
            <column name="author_id"/>
        </createIndex>
    </changeSet>
    <changeSet id="1617219483236-9" author="jw (generated)">
        <addForeignKeyConstraint baseColumnNames="author_id" baseTableName="comment"
                                 constraintName="FK_COMMENT_ON_AUTHOR" referencedColumnNames="id"
                                 referencedTableName="author"/>

        <createIndex indexName="IDX_COMMENT_ON_AUTHOR" tableName="comment">
            <column name="author_id"/>
        </createIndex>
    </changeSet>
    <changeSet id="1617219483236-10" author="jw (generated)">
        <dropView viewName="spt_values"/>
    </changeSet>

</databaseChangeLog>